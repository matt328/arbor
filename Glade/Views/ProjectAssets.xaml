<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Glade.Views.ProjectAssets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Glade.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:Glade.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:ProjectAssetsViewModel}"
      mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <CommandBar Background="Transparent"
                  IsOpen="False"
                  DefaultLabelPosition="Right"
                  HorizontalAlignment="Left">
        <AppBarButton Icon="Add"
                      Label="Model"
                      Command="{Binding AddModelCommand}"/>
        <AppBarButton Icon="Add"
                      Label="Animation" />
        <AppBarButton Icon="Add"
                      Label="Skeleton" />
      </CommandBar>
    </Grid>
    <Grid Grid.Row="1">
      <ScrollViewer Padding="12">
        <StackPanel Spacing="8">
          <!-- Models -->
          <Expander Header="Models"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    IsExpanded="True">
            <ItemsRepeater ItemsSource="{Binding ModelVMs}"
                           HorizontalAlignment="Stretch">
              <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" />
              </ItemsRepeater.Layout>
              <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="local:ProjectAssets">
                  <TextBlock Text="{Binding Name}"
                             Margin="12,2" />
                </DataTemplate>
              </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
          </Expander>
          <!-- Animations -->
          <Expander Header="Animations"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    IsExpanded="True">
            <ItemsRepeater ItemsSource="{Binding AnimationVMs}"
                           HorizontalAlignment="Left">
              <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" />
              </ItemsRepeater.Layout>
              <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                  <TextBlock Text="{Binding Name}"
                             HorizontalAlignment="Left"
                             Margin="12,2" />
                </DataTemplate>
              </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
          </Expander>
          <!-- Skeletons -->
          <Expander Header="Skeletons"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    IsExpanded="True">
            <ItemsRepeater ItemsSource="{Binding SkeletonVMs}">
              <ItemsRepeater.Layout>
                <StackLayout Orientation="Vertical" />
              </ItemsRepeater.Layout>
              <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                  <TextBlock Text="{Binding Name}"
                             Margin="12,2" />
                </DataTemplate>
              </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
          </Expander>
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</Page>
